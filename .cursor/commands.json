{
  "commands": [
    {
      "id": "generate-task",
      "title": "Generate Task From Queue",
      "run": "pwsh -File pipeline/scripts/generate-tasks-from-queue.ps1 -QueueFile <queue_file> -TargetDirectory <tasks_dir> -Prefix <prefix> -Actor \"<actor>\" [-Id <item_id>]"
    },
    {
      "id": "check-knowledge",
      "title": "Check Knowledge Schema",
      "run": "pwsh -File pipeline/scripts/check-knowledge-schema.ps1 -Path <file>"
    },
    {
      "id": "complete-task",
      "title": "Complete Task",
      "run": "pwsh -File pipeline/scripts/complete-task.ps1 -TaskFile <task_file> -TargetQueueFile <queue_file> -Actor \"<actor>\""
    }
  ]
}
