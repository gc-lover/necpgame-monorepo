#!/bin/bash
set -e

if ! command -v bash >/dev/null 2>&1; then
  exit 0
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

if [ ! -f "$PROJECT_ROOT/.github/file-size-config.sh" ]; then
  echo "Warning: file-size-config.sh not found, skipping pre-commit hook"
  exit 0
fi

source "$PROJECT_ROOT/.github/file-size-config.sh"

echo "üîç Checking file sizes before commit..."
echo "Max lines per file: $MAX_LINES"
echo ""

FAILED_FILES=()
CHECKED_COUNT=0

TEMP_FILE=$(mktemp 2>/dev/null || echo "/tmp/git-diff-cached-$$")
trap "rm -f '$TEMP_FILE'" EXIT INT TERM

if ! git diff --cached --name-only --diff-filter=ACMRT > "$TEMP_FILE" 2>/dev/null; then
  echo "Warning: Failed to get staged files, skipping pre-commit hook"
  rm -f "$TEMP_FILE"
  exit 0
fi

while IFS= read -r file || [ -n "$file" ]; do
  if [ -z "$file" ] || [ ! -f "$file" ]; then
    continue
  fi
  
  if ! check_file_extension "$file"; then
    continue
  fi
  
  if is_excluded "$file"; then
    echo "‚è≠Ô∏è  Skipping (excluded): $file"
    continue
  fi
  
  LINES=$(wc -l < "$file" 2>/dev/null || echo "0")
  CHECKED_COUNT=$((CHECKED_COUNT + 1))
  
  if [ "$LINES" -gt "$MAX_LINES" ]; then
    FAILED_FILES+=("$file:$LINES")
    echo "‚ùå $file has $LINES lines (max: $MAX_LINES)"
  else
    echo "OK $file has $LINES lines (OK)"
  fi
done < "$TEMP_FILE"

rm -f "$TEMP_FILE"

echo ""
echo "Files checked: $CHECKED_COUNT"

if [ ${#FAILED_FILES[@]} -gt 0 ]; then
  echo ""
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  echo "‚ùå COMMIT REJECTED: Files exceeding $MAX_LINES lines:"
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  for entry in "${FAILED_FILES[@]}"; do
    IFS=':' read -r file lines <<< "$entry"
    echo "  ‚Ä¢ $file: $lines lines (exceeds by $((lines - MAX_LINES)) lines)"
  done
  echo ""
  echo "üí° Please split these files into smaller files (max $MAX_LINES lines)."
  echo "   Recommended: ~300-400 lines per file for better maintainability."
  echo ""
  echo "To bypass this check (NOT recommended):"
  echo "   git commit --no-verify"
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  exit 1
else
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  echo "OK All files are within the $MAX_LINES line limit"
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  exit 0
fi

