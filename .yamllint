extends: default
ignore: |
  pipeline/tasks/archive/**
  pipeline/tasks/**/RFA-*.yaml
  services/frontend/src/api/generated/**
  node_modules/**

rules:
  line-length:
    max: 160
    level: warning
  indentation:
    spaces: 2
    indent-sequences: consistent
  document-start:
    present: false
  truthy:
    level: warning
