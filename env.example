# NECPGAME Environment Configuration

# Database
POSTGRES_DB=necpgame
POSTGRES_USER=necpgame
POSTGRES_PASSWORD=necpgame_password
DATABASE_URL=postgres://necpgame:necpgame_password@localhost:5432/necpgame?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-development-jwt-secret-change-in-production
JWT_EXPIRATION_HOURS=24

# Services
AUTH_SERVICE_PORT=8080
ABILITY_SERVICE_PORT=8081

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# API Gateway
ENVOY_PORT=8080

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

