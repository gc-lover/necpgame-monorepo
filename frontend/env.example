# Application Configuration
VITE_APP_NAME="Telconet Voice Automation Platform"
VITE_APP_VERSION="1.0.0"
VITE_ENVIRONMENT="development"

# API Configuration
VITE_API_URL="http://localhost:8000"
VITE_API_TIMEOUT="30000"

# WebSocket Configuration
VITE_WS_URL="ws://localhost:8000"
VITE_WS_RECONNECT_ATTEMPTS="5"
VITE_WS_RECONNECT_DELAY="1000"

# Authentication
VITE_JWT_REFRESH_THRESHOLD="300000" # 5 minutes in milliseconds

# Feature Flags
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_WEBSOCKET="true"
VITE_ENABLE_VOICE_PREVIEW="true"
VITE_ENABLE_DEBUG_MODE="false"

# UI Configuration
VITE_DEFAULT_THEME="light"
VITE_DEFAULT_LANGUAGE="en"
VITE_DATE_FORMAT="yyyy-MM-dd"
VITE_TIME_FORMAT="HH:mm:ss"
VITE_DATETIME_FORMAT="yyyy-MM-dd HH:mm:ss"

# Pagination
VITE_DEFAULT_PAGE_SIZE="20"
VITE_MAX_PAGE_SIZE="100"

# File Upload
VITE_MAX_FILE_SIZE="10485760" # 10MB in bytes
VITE_ALLOWED_AUDIO_TYPES="audio/wav,audio/mp3,audio/m4a,audio/webm"

# Analytics
VITE_ANALYTICS_REFRESH_INTERVAL="30000" # 30 seconds
VITE_CHART_ANIMATION_DURATION="500"

# Campaign Settings
VITE_MAX_CONTACTS_PER_CAMPAIGN="10000"
VITE_CAMPAIGN_STATUS_UPDATE_INTERVAL="5000" # 5 seconds

# Audio Playback
VITE_AUDIO_WAVEFORM_HEIGHT="80"
VITE_AUDIO_PREVIEW_DURATION="30" # seconds

# Development
VITE_ENABLE_DEVTOOLS="true"
VITE_MOCK_API="false"
