<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Loot Tables Definition -->
    <changeSet id="create-loot-tables-table" author="database-engineer">
        <createTable tableName="loot_tables" schemaName="economy">
            <column name="loot_table_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="table_name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="table_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="source_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="level_min" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="level_max" type="INTEGER" defaultValue="100">
                <constraints nullable="false"/>
            </column>
            <column name="rolls_count" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="guaranteed_items" type="JSONB"/>
            <column name="drop_rules" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="smart_loot_enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex indexName="idx_loot_tables_type" tableName="loot_tables" schemaName="economy">
            <column name="table_type"/>
        </createIndex>

        <createIndex indexName="idx_loot_tables_source" tableName="loot_tables" schemaName="economy">
            <column name="source_type"/>
        </createIndex>

        <createIndex indexName="idx_loot_tables_active" tableName="loot_tables" schemaName="economy">
            <column name="is_active"/>
        </createIndex>

        <createIndex indexName="idx_loot_tables_level" tableName="loot_tables" schemaName="economy">
            <column name="level_min"/>
            <column name="level_max"/>
        </createIndex>

        <comment>Loot Tables table - loot table definitions</comment>
    </changeSet>

    <!-- Loot Table Entries -->
    <changeSet id="create-loot-table-entries-table" author="database-engineer">
        <createTable tableName="loot_table_entries" schemaName="economy">
            <column name="entry_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="loot_table_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="item_template_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="item_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="rarity" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="drop_chance" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="min_quantity" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="max_quantity" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="INTEGER" defaultValue="100">
                <constraints nullable="false"/>
            </column>
            <column name="conditions" type="JSONB"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableSchemaName="economy"
            baseTableName="loot_table_entries"
            baseColumnNames="loot_table_id"
            referencedTableSchemaName="economy"
            referencedTableName="loot_tables"
            referencedColumnNames="loot_table_id"
            constraintName="fk_loot_table_entries_table"
            onDelete="CASCADE"/>

        <!-- Indexes for performance -->
        <createIndex indexName="idx_loot_table_entries_table" tableName="loot_table_entries" schemaName="economy">
            <column name="loot_table_id"/>
        </createIndex>

        <createIndex indexName="idx_loot_table_entries_item_type" tableName="loot_table_entries" schemaName="economy">
            <column name="item_type"/>
        </createIndex>

        <createIndex indexName="idx_loot_table_entries_rarity" tableName="loot_table_entries" schemaName="economy">
            <column name="rarity"/>
        </createIndex>

        <comment>Loot Table Entries table - items in each loot table</comment>
    </changeSet>

    <!-- Loot History Table -->
    <changeSet id="create-loot-history-table" author="database-engineer">
        <createTable tableName="loot_history" schemaName="economy">
            <column name="loot_history_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="loot_table_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="source_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="source_id" type="VARCHAR(100)"/>
            <column name="items_rolled" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="items_received" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="total_value_ed" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="smart_loot_applied" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableSchemaName="economy"
            baseTableName="loot_history"
            baseColumnNames="player_id"
            referencedTableSchemaName="character"
            referencedTableName="characters"
            referencedColumnNames="character_id"
            constraintName="fk_loot_history_player"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableSchemaName="economy"
            baseTableName="loot_history"
            baseColumnNames="loot_table_id"
            referencedTableSchemaName="economy"
            referencedTableName="loot_tables"
            referencedColumnNames="loot_table_id"
            constraintName="fk_loot_history_table"
            onDelete="CASCADE"/>

        <!-- Indexes for performance -->
        <createIndex indexName="idx_loot_history_player" tableName="loot_history" schemaName="economy">
            <column name="player_id"/>
            <column name="created_at" descending="true"/>
        </createIndex>

        <createIndex indexName="idx_loot_history_table" tableName="loot_history" schemaName="economy">
            <column name="loot_table_id"/>
            <column name="created_at" descending="true"/>
        </createIndex>

        <createIndex indexName="idx_loot_history_source" tableName="loot_history" schemaName="economy">
            <column name="source_type"/>
            <column name="source_id"/>
        </createIndex>

        <comment>Loot History table - history of loot rolls</comment>
    </changeSet>

    <!-- Smart Loot Preferences Table -->
    <changeSet id="create-smart-loot-preferences-table" author="database-engineer">
        <createTable tableName="smart_loot_preferences" schemaName="economy">
            <column name="preference_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="preferred_item_types" type="JSONB"/>
            <column name="preferred_stats" type="JSONB"/>
            <column name="blacklisted_items" type="JSONB"/>
            <column name="playstyle_tags" type="JSONB"/>
            <column name="is_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableSchemaName="economy"
            baseTableName="smart_loot_preferences"
            baseColumnNames="player_id"
            referencedTableSchemaName="character"
            referencedTableName="characters"
            referencedColumnNames="character_id"
            constraintName="fk_smart_loot_preferences_player"
            onDelete="CASCADE"/>

        <!-- Indexes for performance -->
        <createIndex indexName="idx_smart_loot_preferences_player" tableName="smart_loot_preferences" schemaName="economy">
            <column name="player_id"/>
        </createIndex>

        <comment>Smart Loot Preferences table - player loot preferences</comment>
    </changeSet>

</databaseChangeLog>

