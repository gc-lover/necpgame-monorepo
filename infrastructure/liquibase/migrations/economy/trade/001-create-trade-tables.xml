<?xml version="1.0" encoding="UTF-8"?>
<!-- Issue: #131 -->
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-trade-sessions-table" author="database-engineer">
        <createTable tableName="trade_sessions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="initiator_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="target_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="trade_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="initiator_items" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="target_items" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="initiator_currency" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="target_currency" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="initiator_ready" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="target_ready" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="completed_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_trade_sessions_initiator" tableName="trade_sessions">
            <column name="initiator_id"/>
            <column name="trade_status"/>
        </createIndex>

        <createIndex indexName="idx_trade_sessions_target" tableName="trade_sessions">
            <column name="target_id"/>
            <column name="trade_status"/>
        </createIndex>

        <createIndex indexName="idx_trade_sessions_expires" tableName="trade_sessions">
            <column name="expires_at"/>
            <column name="trade_status"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-trade-locks-table" author="database-engineer">
        <createTable tableName="trade_locks">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="trade_session_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_lock_session" references="trade_sessions(id)"/>
            </column>
            <column name="locked_items" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="locked_currency" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_trade_locks_session" tableName="trade_locks">
            <column name="trade_session_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-create-trade-audit-log-table" author="database-engineer">
        <createTable tableName="trade_audit_log">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="trade_session_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="ip_address" type="VARCHAR(45)">
                <constraints nullable="true"/>
            </column>
            <column name="user_agent" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_trade_audit_session" tableName="trade_audit_log">
            <column name="trade_session_id"/>
            <column name="created_at" order="DESC"/>
        </createIndex>

        <createIndex indexName="idx_trade_audit_player" tableName="trade_audit_log">
            <column name="player_id"/>
            <column name="created_at" order="DESC"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-create-trade-history-table" author="database-engineer">
        <createTable tableName="trade_history">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player1_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="player2_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="player1_items" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="player2_items" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="player1_currency" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="player2_currency" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="completed_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_trade_history_player1" tableName="trade_history">
            <column name="player1_id"/>
            <column name="completed_at" order="DESC"/>
        </createIndex>

        <createIndex indexName="idx_trade_history_player2" tableName="trade_history">
            <column name="player2_id"/>
            <column name="completed_at" order="DESC"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>





























