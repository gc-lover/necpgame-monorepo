<?xml version="1.0" encoding="UTF-8"?>
<!-- Issue: #135 -->
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-player-inventory-table" author="database-engineer">
        <createTable tableName="player_inventory">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="max_slots" type="INTEGER" defaultValue="50">
                <constraints nullable="false"/>
            </column>
            <column name="used_slots" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="max_weight" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>
            <column name="current_weight" type="DECIMAL(10,2)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_inventory_player" tableName="player_inventory">
            <column name="player_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-inventory-items-table" author="database-engineer">
        <createTable tableName="inventory_items">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="inventory_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_item_inventory" references="player_inventory(id)"/>
            </column>
            <column name="item_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="slot_index" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="is_equipped" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="equipment_slot" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="durability" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="max_durability" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="item_level" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="rarity" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="mods" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="is_locked" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_bound" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="acquired_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_inventory_items_inventory" tableName="inventory_items">
            <column name="inventory_id"/>
            <column name="slot_index"/>
        </createIndex>

        <createIndex indexName="idx_inventory_items_equipped" tableName="inventory_items">
            <column name="inventory_id"/>
            <column name="is_equipped"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-create-storage-vaults-table" author="database-engineer">
        <createTable tableName="storage_vaults">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="vault_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="location_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="max_slots" type="INTEGER" defaultValue="100">
                <constraints nullable="false"/>
            </column>
            <column name="used_slots" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_vaults_player" tableName="storage_vaults">
            <column name="player_id"/>
            <column name="vault_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-create-vault-items-table" author="database-engineer">
        <createTable tableName="vault_items">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="vault_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_vaultitem_vault" references="storage_vaults(id)"/>
            </column>
            <column name="item_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="slot_index" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="durability" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="max_durability" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="item_level" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="rarity" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="mods" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="stored_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_vault_items_vault" tableName="vault_items">
            <column name="vault_id"/>
            <column name="slot_index"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>



