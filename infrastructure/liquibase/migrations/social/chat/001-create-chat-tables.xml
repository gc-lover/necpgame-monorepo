<?xml version="1.0" encoding="UTF-8"?>
<!-- Issue: #172 -->
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-chat-channels-table" author="database-engineer">
        <createTable tableName="chat_channels">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="channel_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="channel_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="max_message_length" type="INTEGER" defaultValue="500">
                <constraints nullable="false"/>
            </column>
            <column name="cooldown_seconds" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="read_permission" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="write_permission" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_channel_type" tableName="chat_channels">
            <column name="channel_type"/>
        </createIndex>

        <createIndex indexName="idx_channel_owner" tableName="chat_channels">
            <column name="owner_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-chat-messages-table" author="database-engineer">
        <createTable tableName="chat_messages">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="channel_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="message_text" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="formatted_text" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="translation_cache" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="sent_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_chat_messages_channel" tableName="chat_messages">
            <column name="channel_id"/>
            <column name="sent_at" order="DESC"/>
        </createIndex>

        <createIndex indexName="idx_chat_messages_sender" tableName="chat_messages">
            <column name="sender_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-create-chat-bans-table" author="database-engineer">
        <createTable tableName="chat_bans">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="channel_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="ban_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reason" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="banned_by" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="banned_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_chat_bans_player" tableName="chat_bans">
            <column name="player_id"/>
            <column name="is_active"/>
        </createIndex>

        <createIndex indexName="idx_chat_bans_expires" tableName="chat_bans">
            <column name="expires_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

























