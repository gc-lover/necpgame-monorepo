openapi: 3.0.3
info:
  title: System Domain API
  description: |
    Consolidated System Domain API for NECPGAME complete system infrastructure.

    This API consolidates ALL system functionality across the entire platform:
    - Administrative functions and system management (admin/)
    - Analytics, metrics and data visualization (analytics/)
    - Network infrastructure and real-time communication (network/)
    - Artificial intelligence and NPC behavior systems (ai/)
    - Circuit breaker and system protection (circuit-breakers/)
    - Message queue and event systems (messaging/)
    - Path management and routing (paths/)
    - Service orchestration and management (services/)
    - Support ticket and help systems (support/)
    - Synchronization and state management (sync/)

    All endpoints are organized into logical modules with $ref references.
  version: 1.0.0
  contact:
    name: NECPGAME API Support
    url: https://necpgame.com/support
    email: api@necpgame.com

servers:
  - url: http://localhost:8080/api/v1
    description: Development server
  - url: https://api.necpgame.com/api/v1
    description: Production server

security:
  - BearerAuth: []

tags:
  - name: System Admin
    description: Administrative functions and system management
  - name: System Analytics
    description: Analytics and metrics systems
  - name: System Network
    description: Network infrastructure and communication
  - name: System AI
    description: AI and NPC behavior systems
  - name: System Protection
    description: Circuit breakers and system protection
  - name: System Messaging
    description: Message queues and event systems
  - name: System Services
    description: Service orchestration and management
  - name: System Support
    description: Support ticket and help systems
  - name: System Sync
    description: Synchronization and state management

# Import all system modules
paths:
  $ref: './admin/main.yaml#/paths'
  $ref: './analytics/main.yaml#/paths'
  $ref: './network/main.yaml#/paths'
  $ref: './ai/main.yaml#/paths'
  $ref: './circuit-breakers/main.yaml#/paths'
  $ref: './messaging/main.yaml#/paths'
  $ref: './services/main.yaml#/paths'


components:
  schemas:
    $ref: './admin/main.yaml#/components/schemas'
    $ref: './analytics/main.yaml#/components/schemas'
    $ref: './network/main.yaml#/components/schemas'
    $ref: './ai/main.yaml#/components/schemas'
    $ref: './circuit-breakers/main.yaml#/components/schemas'
    $ref: './messaging/main.yaml#/components/schemas'
    $ref: './services/main.yaml#/components/schemas'

  
securitySchemes:
    BearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT

