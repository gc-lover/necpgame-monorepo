{
  "dashboard": {
    "id": null,
    "title": "ogen Services Performance Dashboard",
    "tags": ["ogen", "performance", "monitoring"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "Response Time (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "{{service}}"
          }
        ],
        "yAxes": [
          {
            "unit": "ms",
            "min": 0
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{service}} - {{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "(rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])) * 100",
            "legendFormat": "{{service}} error rate"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "{{service}} memory (MB)"
          }
        ],
        "yAxes": [
          {
            "unit": "MB",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_user_seconds_total[5m]) * 100",
            "legendFormat": "{{service}} CPU %"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "ogen_db_active_connections",
            "legendFormat": "{{service}} active connections"
          },
          {
            "expr": "ogen_db_idle_connections",
            "legendFormat": "{{service}} idle connections"
          }
        ]
      },
      {
        "id": 7,
        "title": "Service Health Status",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=~\"ogen-.*-service\"}",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Performance Test Results",
        "type": "table",
        "targets": [
          {
            "expr": "ogen_performance_test_duration_seconds",
            "legendFormat": "{{test_name}} duration"
          },
          {
            "expr": "ogen_performance_test_requests_per_second",
            "legendFormat": "{{test_name}} RPS"
          },
          {
            "expr": "ogen_performance_test_error_rate_percent",
            "legendFormat": "{{test_name}} error rate"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}






