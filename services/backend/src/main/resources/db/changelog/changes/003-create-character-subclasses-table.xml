<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-character-subclasses-table" author="system">
        <createTable tableName="character_subclasses">
            <column name="subclass_code" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="class_code" type="VARCHAR(50)">
                <constraints nullable="false" foreignKeyName="fk_subclass_class" 
                             references="character_classes(class_code)"/>
            </column>
        </createTable>

        <createIndex tableName="character_subclasses" indexName="idx_character_subclasses_code" unique="true">
            <column name="subclass_code"/>
        </createIndex>

        <createIndex tableName="character_subclasses" indexName="idx_character_subclasses_class_code">
            <column name="class_code"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

