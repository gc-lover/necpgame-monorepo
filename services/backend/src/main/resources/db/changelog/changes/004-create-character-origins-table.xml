<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-character-origins-table" author="system">
        <createTable tableName="character_origins">
            <column name="origin_code" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="starting_skills" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="starting_currency" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="starting_items" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="character_origins" indexName="idx_character_origins_code" unique="true">
            <column name="origin_code"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

