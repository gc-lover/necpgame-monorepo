<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-origin-available-factions-table" author="system">
        <createTable tableName="origin_available_factions">
            <column name="origin_code" type="VARCHAR(50)">
                <constraints nullable="false" foreignKeyName="fk_origin_faction_origin" 
                             references="character_origins(origin_code)"/>
            </column>
            <column name="faction_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_origin_faction_faction" 
                             references="factions(id)"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="origin_available_factions" 
                       columnNames="origin_code,faction_id" 
                       constraintName="pk_origin_available_factions"/>
    </changeSet>

</databaseChangeLog>

