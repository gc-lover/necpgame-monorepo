<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-city-available-factions-table" author="system">
        <createTable tableName="city_available_factions">
            <column name="city_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_city_faction_city" 
                             references="cities(id)"/>
            </column>
            <column name="faction_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_city_faction_faction" 
                             references="factions(id)"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="city_available_factions" 
                       columnNames="city_id,faction_id" 
                       constraintName="pk_city_available_factions"/>
    </changeSet>

</databaseChangeLog>

