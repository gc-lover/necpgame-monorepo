<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="009-create-character-appearances-table" author="system">
        <createTable tableName="character_appearances">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="height" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="body_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="hair_color" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="eye_color" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="skin_color" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="distinctive_features" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>

