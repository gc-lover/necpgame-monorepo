<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="020-create-character-implants-table" author="system">
        <createTable tableName="character_implants">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="character_id" type="UUID">
                <constraints nullable="false" 
                             foreignKeyName="fk_character_implants_character" 
                             references="characters(id)"
                             deleteCascade="true"/>
            </column>
            <column name="implant_id" type="VARCHAR(100)">
                <constraints nullable="false" 
                             foreignKeyName="fk_character_implants_implant" 
                             references="implants(id)"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="quality" type="VARCHAR(50)" defaultValue="normal">
                <constraints nullable="false"/>
            </column>
            <column name="installed_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deactivated_at" type="TIMESTAMP"/>
        </createTable>
        
        <createIndex tableName="character_implants" indexName="idx_character_implants_character">
            <column name="character_id"/>
        </createIndex>
        <createIndex tableName="character_implants" indexName="idx_character_implants_implant">
            <column name="implant_id"/>
        </createIndex>
        <createIndex tableName="character_implants" indexName="idx_character_implants_active">
            <column name="is_active"/>
        </createIndex>
        
        <addUniqueConstraint tableName="character_implants" 
                             constraintName="uk_character_implant" 
                             columnNames="character_id, implant_id"/>
    </changeSet>

</databaseChangeLog>
