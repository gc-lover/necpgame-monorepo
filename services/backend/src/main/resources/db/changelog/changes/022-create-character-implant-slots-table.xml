<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="022-create-character-implant-slots-table" author="system">
        <createTable tableName="character_implant_slots">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="character_id" type="UUID">
                <constraints nullable="false" 
                             foreignKeyName="fk_character_implant_slots_character" 
                             references="characters(id)"
                             deleteCascade="true"/>
            </column>
            <column name="slot_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="max_slots" type="INTEGER" defaultValueNumeric="2">
                <constraints nullable="false"/>
            </column>
            <column name="used_slots" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="bonus_slots" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="character_implant_slots" indexName="idx_character_implant_slots_character">
            <column name="character_id"/>
        </createIndex>
        <createIndex tableName="character_implant_slots" indexName="idx_character_implant_slots_type">
            <column name="slot_type"/>
        </createIndex>
        
        <addUniqueConstraint tableName="character_implant_slots" 
                             constraintName="uk_character_slot_type" 
                             columnNames="character_id, slot_type"/>
    </changeSet>

</databaseChangeLog>
