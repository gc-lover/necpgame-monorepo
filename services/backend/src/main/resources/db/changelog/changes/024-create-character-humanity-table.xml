<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="024-create-character-humanity-table" author="system">
        <createTable tableName="character_humanity">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="character_id" type="UUID">
                <constraints nullable="false" unique="true"
                             foreignKeyName="fk_character_humanity_character" 
                             references="characters(id)"
                             deleteCascade="true"/>
            </column>
            <column name="current_humanity" type="REAL" defaultValueNumeric="100.0">
                <constraints nullable="false"/>
            </column>
            <column name="max_humanity" type="REAL" defaultValueNumeric="100.0">
                <constraints nullable="false"/>
            </column>
            <column name="loss_percentage" type="REAL" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="stage" type="VARCHAR(50)" defaultValue="early">
                <constraints nullable="false"/>
            </column>
            <column name="total_humanity_lost" type="REAL" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="last_loss_at" type="TIMESTAMP"/>
            <column name="adaptation_level" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="character_humanity" indexName="idx_character_humanity_character" unique="true">
            <column name="character_id"/>
        </createIndex>
        <createIndex tableName="character_humanity" indexName="idx_character_humanity_stage">
            <column name="stage"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
