<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="028-seed-cyberpsychosis-data" author="system">
        
        <!-- Симптомы ранней стадии -->
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_early_insomnia"/>
            <column name="name" value="Бессонница"/>
            <column name="description" value="Нарушение сна, трудности с засыпанием"/>
            <column name="stage" value="early"/>
            <column name="severity" value="mild"/>
            <column name="category" value="physical"/>
            <column name="stat_effects" value='{"stamina": -1}'/>
            <column name="chance_to_trigger" value="20"/>
        </insert>
        
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_early_anxiety"/>
            <column name="name" value="Повышенная тревожность"/>
            <column name="description" value="Беспричинное беспокойство и тревога"/>
            <column name="stage" value="early"/>
            <column name="severity" value="mild"/>
            <column name="category" value="mental"/>
            <column name="stat_effects" value='{"willpower": -1}'/>
            <column name="chance_to_trigger" value="25"/>
        </insert>
        
        <!-- Симптомы средней стадии -->
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_middle_aggression"/>
            <column name="name" value="Неконтролируемая агрессия"/>
            <column name="description" value="Вспышки гнева и агрессивное поведение"/>
            <column name="stage" value="middle"/>
            <column name="severity" value="moderate"/>
            <column name="category" value="behavioral"/>
            <column name="stat_effects" value='{"empathy": -2, "reputation": -1}'/>
            <column name="chance_to_trigger" value="40"/>
        </insert>
        
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_middle_paranoia"/>
            <column name="name" value="Паранойя"/>
            <column name="description" value="Недоверие к окружающим, мания преследования"/>
            <column name="stage" value="middle"/>
            <column name="severity" value="moderate"/>
            <column name="category" value="mental"/>
            <column name="stat_effects" value='{"cool": -2}'/>
            <column name="chance_to_trigger" value="35"/>
        </insert>
        
        <!-- Симптомы поздней стадии -->
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_late_hallucinations"/>
            <column name="name" value="Галлюцинации"/>
            <column name="description" value="Зрительные и слуховые галлюцинации"/>
            <column name="stage" value="late"/>
            <column name="severity" value="severe"/>
            <column name="category" value="mental"/>
            <column name="stat_effects" value='{"intelligence": -2, "perception": -2}'/>
            <column name="chance_to_trigger" value="60"/>
        </insert>
        
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_late_dissociation"/>
            <column name="name" value="Диссоциация"/>
            <column name="description" value="Отстранение от реальности, деперсонализация"/>
            <column name="stage" value="late"/>
            <column name="severity" value="severe"/>
            <column name="category" value="mental"/>
            <column name="stat_effects" value='{"empathy": -3}'/>
            <column name="chance_to_trigger" value="50"/>
        </insert>
        
        <!-- Симптомы киберпсихоза -->
        <insert tableName="cyberpsychosis_symptoms">
            <column name="id" value="symptom_psychosis_violence"/>
            <column name="name" value="Неконтролируемое насилие"/>
            <column name="description" value="Потеря контроля над поведением, приступы ярости"/>
            <column name="stage" value="cyberpsychosis"/>
            <column name="severity" value="critical"/>
            <column name="category" value="behavioral"/>
            <column name="stat_effects" value='{"empathy": -5, "cool": -3, "reputation": -5}'/>
            <column name="chance_to_trigger" value="80"/>
        </insert>
        
        <!-- Методы лечения -->
        <insert tableName="cyberpsychosis_treatments">
            <column name="id" value="treatment_therapy_basic"/>
            <column name="name" value="Базовая терапия"/>
            <column name="description" value="Психотерапевтическая сессия с специалистом"/>
            <column name="type" value="therapy"/>
            <column name="humanity_restore" value="5.0"/>
            <column name="cost_credits" value="500"/>
            <column name="duration_hours" value="2"/>
            <column name="required_stage" value="early"/>
            <column name="success_rate" value="90"/>
        </insert>
        
        <insert tableName="cyberpsychosis_treatments">
            <column name="id" value="treatment_medication_stabilizer"/>
            <column name="name" value="Стабилизатор нейроимплантов"/>
            <column name="description" value="Медикаментозное средство для стабилизации импл антов"/>
            <column name="type" value="medication"/>
            <column name="humanity_restore" value="8.0"/>
            <column name="cost_credits" value="1200"/>
            <column name="duration_hours" value="1"/>
            <column name="required_stage" value="middle"/>
            <column name="success_rate" value="80"/>
        </insert>
        
        <insert tableName="cyberpsychosis_treatments">
            <column name="id" value="treatment_detox_full"/>
            <column name="name" value="Полная детоксикация"/>
            <column name="description" value="Полное очищение организма от токсинов"/>
            <column name="type" value="detox"/>
            <column name="humanity_restore" value="20.0"/>
            <column name="cost_credits" value="5000"/>
            <column name="duration_hours" value="12"/>
            <column name="required_stage" value="late"/>
            <column name="success_rate" value="70"/>
            <column name="side_effects" value='["weakness", "nausea"]'/>
        </insert>
        
    </changeSet>

</databaseChangeLog>
