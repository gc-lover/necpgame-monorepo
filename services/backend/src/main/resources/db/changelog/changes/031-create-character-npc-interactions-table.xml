<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="031-create-character-npc-interactions-table" author="system">
        <createTable tableName="character_npc_interactions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="character_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_character_npc_interactions_character" 
                             references="characters(id)"
                             deleteCascade="true"/>
            </column>
            <column name="npc_id" type="VARCHAR(100)">
                <constraints nullable="false"
                             foreignKeyName="fk_character_npc_interactions_npc" 
                             references="npcs(id)"/>
            </column>
            <column name="current_dialogue_id" type="VARCHAR(100)">
                <constraints foreignKeyName="fk_character_npc_interactions_dialogue" 
                             references="npc_dialogues(id)"/>
            </column>
            <column name="interaction_count" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="relationship_level" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="first_interaction_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_interaction_at" type="TIMESTAMP"/>
        </createTable>
        
        <createIndex tableName="character_npc_interactions" indexName="idx_character_npc_interactions_character">
            <column name="character_id"/>
        </createIndex>
        <createIndex tableName="character_npc_interactions" indexName="idx_character_npc_interactions_npc">
            <column name="npc_id"/>
        </createIndex>
        <createIndex tableName="character_npc_interactions" indexName="idx_character_npc_interactions_dialogue">
            <column name="current_dialogue_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
