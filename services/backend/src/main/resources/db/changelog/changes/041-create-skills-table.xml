<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="041-create-skills-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="skills"/>
            </not>
        </preConditions>

        <createTable tableName="skills">
            <column name="id" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="category" type="VARCHAR(50)"/>
            <column name="max_level" type="INT" defaultValue="20">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="skills" indexName="idx_skills_name">
            <column name="name"/>
        </createIndex>

        <rollback>
            <dropTable tableName="skills"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
