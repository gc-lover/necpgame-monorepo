<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="043-seed-skills-data" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="skills"/>
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM skills</sqlCheck>
        </preConditions>

        <!-- Combat Skills -->
        <insert tableName="skills">
            <column name="id" value="skill_handguns"/>
            <column name="name" value="Пистолеты"/>
            <column name="description" value="Владение пистолетами и револьверами"/>
            <column name="category" value="combat"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_rifles"/>
            <column name="name" value="Винтовки"/>
            <column name="description" value="Владение винтовками и снайперскими винтовками"/>
            <column name="category" value="combat"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_melee"/>
            <column name="name" value="Ближний бой"/>
            <column name="description" value="Владение холодным оружием и рукопашным боем"/>
            <column name="category" value="combat"/>
            <column name="max_level" value="20"/>
        </insert>

        <!-- Technical Skills -->
        <insert tableName="skills">
            <column name="id" value="skill_hacking"/>
            <column name="name" value="Хакинг"/>
            <column name="description" value="Взлом систем безопасности и доступ к данным"/>
            <column name="category" value="technical"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_engineering"/>
            <column name="name" value="Инженерия"/>
            <column name="description" value="Ремонт, модификация и создание оборудования"/>
            <column name="category" value="technical"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_crafting"/>
            <column name="name" value="Крафт"/>
            <column name="description" value="Создание предметов, патронов и расходников"/>
            <column name="category" value="technical"/>
            <column name="max_level" value="20"/>
        </insert>

        <!-- Social Skills -->
        <insert tableName="skills">
            <column name="id" value="skill_persuasion"/>
            <column name="name" value="Убеждение"/>
            <column name="description" value="Способность убеждать и манипулировать людьми"/>
            <column name="category" value="social"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_intimidation"/>
            <column name="name" value="Запугивание"/>
            <column name="description" value="Способность запугивать и угрожать"/>
            <column name="category" value="social"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_street_knowledge"/>
            <column name="name" value="Знание улиц"/>
            <column name="description" value="Знание криминального мира и правил улиц"/>
            <column name="category" value="social"/>
            <column name="max_level" value="20"/>
        </insert>

        <!-- Stealth Skills -->
        <insert tableName="skills">
            <column name="id" value="skill_stealth"/>
            <column name="name" value="Скрытность"/>
            <column name="description" value="Способность оставаться незамеченным"/>
            <column name="category" value="stealth"/>
            <column name="max_level" value="20"/>
        </insert>

        <insert tableName="skills">
            <column name="id" value="skill_lockpicking"/>
            <column name="name" value="Взлом замков"/>
            <column name="description" value="Открытие замков и взлом физической защиты"/>
            <column name="category" value="stealth"/>
            <column name="max_level" value="20"/>
        </insert>

        <rollback>
            <delete tableName="skills"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
