<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="044-create-combat-sessions-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="combat_sessions"/>
            </not>
        </preConditions>

        <createTable tableName="combat_sessions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="character_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="location_id" type="VARCHAR(100)"/>
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="current_turn" type="VARCHAR(100)"/>
            <column name="round" type="INT" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="combat_log" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="ended_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="combat_sessions"
                baseColumnNames="character_id"
                constraintName="fk_combat_sessions_character"
                referencedTableName="characters"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="combat_sessions" indexName="idx_combat_sessions_character">
            <column name="character_id"/>
        </createIndex>
        <createIndex tableName="combat_sessions" indexName="idx_combat_sessions_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="combat_sessions" indexName="idx_combat_sessions_location">
            <column name="location_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="combat_sessions"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
