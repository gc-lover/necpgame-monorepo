<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="047-create-game-locations-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="game_locations"/>
            </not>
        </preConditions>

        <createTable tableName="game_locations">
            <column name="id" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="location_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="danger_level" type="INT" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="VARCHAR(500)"/>
            <column name="accessible" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="requirements" type="VARCHAR(1000)"/>
            <column name="connected_locations" type="TEXT"/>
            <column name="available_actions" type="TEXT"/>
            <column name="npcs" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="game_locations" indexName="idx_game_locations_type">
            <column name="location_type"/>
        </createIndex>
        <createIndex tableName="game_locations" indexName="idx_game_locations_danger">
            <column name="danger_level"/>
        </createIndex>

        <rollback>
            <dropTable tableName="game_locations"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
