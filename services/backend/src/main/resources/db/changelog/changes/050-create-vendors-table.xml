<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="050-create-vendors-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="vendors"/>
            </not>
        </preConditions>

        <createTable tableName="vendors">
            <column name="id" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="location_id" type="VARCHAR(100)"/>
            <column name="vendor_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="reputation_required" type="INT" defaultValue="0"/>
            <column name="discount_percent" type="INT" defaultValue="0"/>
            <column name="available" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="vendors" indexName="idx_vendors_location">
            <column name="location_id"/>
        </createIndex>
        <createIndex tableName="vendors" indexName="idx_vendors_type">
            <column name="vendor_type"/>
        </createIndex>

        <rollback>
            <dropTable tableName="vendors"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
