<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="065-create-friendships-table" author="backend-agent">
        <createTable tableName="friendships">
            <column name="friendship_id" type="VARCHAR(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="character_id_1" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="character_id_2" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="accepted_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <createIndex tableName="friendships" indexName="idx_friendships_character1">
            <column name="character_id_1"/>
        </createIndex>

        <createIndex tableName="friendships" indexName="idx_friendships_character2">
            <column name="character_id_2"/>
        </createIndex>

        <createIndex tableName="friendships" indexName="idx_friendships_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

