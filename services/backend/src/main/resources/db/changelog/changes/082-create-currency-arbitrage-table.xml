<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="082-create-currency-arbitrage-table" author="backend-agent">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="currency_arbitrage_opportunities"/>
            </not>
        </preConditions>

        <createTable tableName="currency_arbitrage_opportunities">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="opportunity_type" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="pairs_json" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="profit_potential" type="NUMERIC(8,4)"/>
            <column name="description" type="TEXT"/>
            <column name="expires_in_seconds" type="INT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="currency_arbitrage_opportunities"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

